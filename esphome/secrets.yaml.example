# ESPHome Secrets Configuration Template
# Copy this file to secrets.yaml and fill in your values
#
# IMPORTANT: Never commit secrets.yaml to version control!

# WiFi credentials
wifi_ssid: "YOUR_WIFI_SSID"
wifi_password: "YOUR_WIFI_PASSWORD"

# Fallback Access Point password
ap_password: "fallback_password"

# API encryption key (generate with: esphome generate-encryption-key)
# This key encrypts communication between Home Assistant and the device
api_encryption_key: "YOUR_ENCRYPTION_KEY_HERE"

# OTA update password
ota_password: "YOUR_OTA_PASSWORD"
